@{
    ViewBag.Title = "Home Page";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Good Day</title>
    <link href="https://fonts.googleapis.com/css?family=Kalam:300|Salsa" rel="stylesheet">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/estilo.css" rel="stylesheet" />
    <link href="~/Content/icon.css" rel="stylesheet" />
   
   
</head>
<body>
    <nav class="navbar-azul">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 col-md-offset-0 col-md-3 col-lg-offset-0 col-lg-3">
                    <h1 class="Salsa">Good Day</h1>
                </div>
                <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-4 col-md-offset-1 col-md-8 col-lg-offset-3 col-lg-6">
                    <form class="form-inline margin"action="@Url.Action("DoLogin","Usuarios")"method="post" >
                        <div class="form-group">
                            <label for="mail">Email</label>
                            <input type="text" class="form-control" name="mail">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <div class="form-group centerText">
                            <button type="submit" class="btn btn-outline-secondary">Iniciar Sesión</button>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-8 visible-xs visible-sm">
                        <hr />
                        <div class="form-group centerText">
                            <button type="submit" class="btn btn-outline-secondary">Registrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-8 col-md-3 hidden-xs hidden-sm">
                <form class="margin-top" action="@Url.Action("Register","Usuarios")" method = "post"> 
                    <h2>Registro</h2>
                    <div class="form-group">
                        <input type="text" class="form-control" name="nameUsuario" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control"  name="mail" placeholder="Mail">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password2" placeholder="Confirma Contraseña">
                    </div>
                    <div class="form-group centerText">
                        <button type="submit" class="btn btn-outline-secondary">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/miJavaScript.js"></script>
</body>
</html>
