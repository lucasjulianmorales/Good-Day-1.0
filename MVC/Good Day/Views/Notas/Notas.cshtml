
@{
    ViewBag.Title = "Notas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="menuNota">
    <div class="container-fluid">
        <div class="row centerText">
           
            <h2 class="Salsa">@ViewBag.Libreta.NameLibreta</h2>
        
            <a href="@Url.Action("Home","Home")" role = "button"><span class="icon-arrow-left arrow-back" aria-hidden="true"></span></a>    
            <div id="barIcon" class="col-xs-2">
                <nav>
                    <ul>
                        <li id="tag"><a data-toggle="modal" data-target="#nuevaTag" role="button"><span class="icon icon-tag" aria-hidden="true"></span></a></li>
                        <li id="calendario"><a href="#" role="button"><span class="icon icon-calendar" aria-hidden="true"></span></a></li>
                        <li id="papelera"><a href="#" role="button"><span class="icon icon-trash-o" aria-hidden="true"></span></a></li>
                 
                    </ul>
                </nav>
            </div>
            @*Recibo los elementos desde la accion Notas del controlador Notas*@
            <div class="container-fluid">
                <div class="row">
                    @if (ViewBag.Tag != null)
                    {
                        foreach (Good_Day.Models.Tag tag in ViewBag.Tag)
                        {

                          
                            <div class="col-xs-5 col-sm-3 col-lg-2">
                                <div class="boxTag">
                                    <h4>@tag.NameTag</h4>
                                    <hr class="borde">
                                    <ul class="lista">
                                       
                                        @if (ViewBag.Nota != null)
                                        {
                                            foreach (Good_Day.Models.Nota nota in ViewBag.Nota)

                                            {
                                                
                                                <li class="boxNota"><a href="#">@nota.NameNota</a></li>
                                            }
                                        }
 
                                        <li><a class="addNotaa" href="#" id="id-@tag.ID_tag">añadir nota...</a></li>
                                    </ul>
                                    
                                        <form id="divForm-@tag.ID_tag" class="form-inline formAddNota" action="@Url.Action("CreateNota", "Notas", new {tagID = tag.ID_tag })" method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="nameNota" placeholder="Escribe tu nota...">
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-info">Guardar</button>
                                            </div>
                                        </form>
                                    


                                </div>
                            </div>
                        }
                    }

                </div>
            </div>

            <!--Modal del Tag-->
            <div id="nuevaTag" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Crear Tag</h4>
                        </div>
                        
                        <div class="modal-body">
                            <form action="@Url.Action("CreateTag","Tags")" method="post">
                                <div class="form-group">    
                                    <input type="text" class="form-control" name="nameTag" placeholder="Nombre Tag...">
        
                                </div>
                            </form>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

